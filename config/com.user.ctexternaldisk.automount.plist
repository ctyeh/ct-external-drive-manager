<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.ctexternaldisk.automount</string>
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/ctyeh/.local/bin/mount-ctexternaldisk-hibernation-safe.sh</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>30</integer>
    <key>StandardOutPath</key>
    <string>/Users/ctyeh/.local/log/ctexternaldisk-mount.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/ctyeh/.local/log/ctexternaldisk-mount.error.log</string>
    
    <!-- Enhanced settings for hibernation/restart handling -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <!-- Start after system is fully loaded -->
    <key>LaunchOnlyOnce</key>
    <false/>
    
    <!-- Restart if the service crashes -->
    <key>AbandonProcessGroup</key>
    <true/>
    
    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
    
    <!-- Watch for system events -->
    <key>WatchPaths</key>
    <array>
        <string>/Volumes</string>
    </array>
</dict>
</plist>
